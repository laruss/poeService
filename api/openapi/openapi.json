{
  "swagger": "2.0",
  "info": {
    "title": "Poe API",
    "description": "Service for managing Poe bots, chats and messages. Has local database for storing data for each bot to reduce load on Poe servers.",
    "version": "1.0.0"
  },
  "paths": {
    "/settings": {
      "$ref": "paths/settings.json"
    },
    "/agent": {
      "$ref": "paths/agent.json"
    },
    "/agent/connect": {
      "$ref": "paths/agent_connect.json"
    },
    "/agent/disconnect": {
      "$ref": "paths/agent_disconnect.json"
    },
    "/agent/reconnect": {
      "$ref": "paths/agent_reconnect.json"
    },
    "/bot": {
      "$ref": "paths/bot.json"
    },
    "/bot/all": {
      "$ref": "paths/bot_all.json"
    },
    "/bot/{botName}/prompt": {
      "$ref": "paths/bot_prompt.json"
    },
    "/bot/{botName}/chat/all": {
      "$ref": "paths/bot_chat_all.json"
    },
    "/bot/{botName}/chat/{chatId}": {
      "$ref": "paths/bot_chat_one.json"
    },
    "/bot/{botName}/chat/current": {
      "$ref": "paths/bot_chat_current.json"
    },
    "/bot/{botName}/chat/new": {
      "$ref": "paths/bot_chat_new.json"
    },
    "/bot/{botName}/chat/{chatId}/messages": {
      "$ref": "paths/bot_chat_messages.json"
    },
    "/bot/{botName}/chat/current/messages": {
      "$ref": "paths/bot_chat_current_messages.json"
    },
    "/bot/{botName}/chat/{chatId}/messages/{messageId}": {
      "$ref": "paths/bot_chat_message.json"
    },
    "/bot/{botName}/chat/current/messages/{messageId}": {
      "$ref": "paths/bot_chat_current_message.json"
    }
  }
}